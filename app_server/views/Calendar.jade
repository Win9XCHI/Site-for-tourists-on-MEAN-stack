extends layout

include _includes/sharedHTMLfunctions

block content
 main(role="main")
  section.jumbotron.text-center
   .container
    h1.jumbotron-heading Календар походів
    p.lead.text-muted Тут ви можете переглянути заплановані походи та приєднатися до нас.
    p
     a.btn.btn-primary.my-2(href="#") Піти в похід!
     span &nbsp;
     a.btn.btn-secondary.my-2(href="#") Зворотній зв'язок


  .album.py-5.bg-light
   .container
   
    each MYO in resultO  
     p.text-muted 
      +calendarItem(MYO.month, MYO.year)
     each Object in MYO.MasObject
      .row
       .col-md-4
        .card.mb-4.shadow-sm
         img.card-img-top(src='#{Object.Foto}', alt="...")
         title ...
         rect(fill="#55595c", width="100%", height="100%")
         text(fill="#eceeef", dy=".3em", x="50%", y="50%")
         .card-body
          h5 !{Object.title}
          p.card-text !{Object.message}
          .d-flex.justify-content-between.align-items-center
           .btn-group
            button.btn.btn-sm.btn-outline-secondary(type="button") Переглянути детальніше
            button.btn.btn-sm.btn-outline-secondary(type="button") Записатися
         
         
